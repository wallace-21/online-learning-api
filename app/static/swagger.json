  "components": {
    "schemas": {
      "Course": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Introduction to Programming"
          },
          "price": {
            "type": "number",
            "example": 49.99
          },
          "duration": {
            "type": "string",
            "example": "4 weeks"
          },
          "description": {
            "type": "string",
            "example": "A beginner course for learning programming."
          },
          "certification": {
            "type": "boolean",
            "example": true
          },
          "date_created": {
            "type": "string",
            "format": "date-time",
            "example": "2024-01-01 00:00"
          }
        }
      },
      "Quiz": {
